<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="windowNoTitle">true</item> <!-- 无标题 -->
        <item name="windowActionBar">false</item> <!-- 无ActionBar -->
        <item name="android:windowFullscreen">true</item> <!-- 全屏即无通知栏 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 是否有遮盖 -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MVVMRapid" parent="@style/Theme.MaterialComponents.Light">
        <item name="android:windowIsTranslucent">true</item>
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MaterialToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="layout_collapseMode">pin</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>